<div class="col-sm-offset-2">
  <h1>Log In</h1>
</div>     


<div class="login-form">
<%= form_tag  sessions_path , class: "form-horizontal", role: 'form' do %>
    <div class="field form-group">
    <%= label_tag :email, nil, :class =>' col-sm-2 control-label' %>
      <div class="col-sm-4">
        <%= text_field_tag :email, params[:email], class: 'form-control', placeholder: 'Email' %>
      </div>
    </div>
  <div class="field form-group">
      <%= label_tag  :password , nil, class: 'col-sm-2 control-label'%>
      <div class="col-sm-4">
        <%= password_field_tag :password, nil , class: 'form-control' , placeholder: 'Password' %>
      </div>
  </div>
  <div class="field form-group">
    <div class="col-sm-offset-2 col-sm-4">
      <div class="checkbox">
        <%= check_box_tag :remember_me, 1, params[:remember_me] %>
        <%= label_tag :remember_me %>
      </div>
    </div>
  </div>
  <div class="field form-group">
    <div class="col-sm-offset-2 col-sm-4">
      <span><%= link_to "forgotten password?", new_password_reset_path %></span>
    </div>
  </div>

  
  <div class="actions form-group">
    <div class="col-sm-offset-2 col-sm-10 ">
      <%= submit_tag "Log In" , class: 'btn btn-default'%>
    </div>
  </div>
<% end %>
</div>



