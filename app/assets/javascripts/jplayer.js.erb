var play_url = function(podcast, player) {
    var time;
    if(player) 
    	time = '&time='+player.data("jPlayer").status.currentTime;
    else 
    	time = '';
	return '/play.js?id='+ podcast.data('id')+time;
}

var play  = function(current_podcast) {
    $.ajax({
			url: play_url(current_podcast, player)
	});
}




